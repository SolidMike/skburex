block content
    .breadcrumbs-wrapper.bg-light-gradient
        .container
            .row
                .col-sm-12
                    ul.breadcrumbs
                        +breadcrumbs-item('Главная','/')
                        +breadcrumbs-item('НОВОСТИ И СТАТЬИ')
    section.blog#blog
        .container
            .row
                .col-md-4.col-sm-12
                .col-md-8.col-sm-12
                    +cards(blogArticles, 'blog', true)(class="col-sm-12 mb-5")
                        block blog-meta
                            .blog__meta.meta
                                i.fa.fa-user
                                span.meta__item= obj.author
                                i.far.fa-bookmark
                                a(href='/blog.html')
                                    span.meta__item= obj.category
                    nav(aria-label='pagination')
                        ul.pagination
                            li.page-item
                                a.page-link(href='#' aria-label='Previous')
                                    span(aria-hidden='true')
                                        i.fas.fa-chevron-left
                            li.page-item.active
                                a.page-link(href='#') 1
                            li.page-item
                                a.page-link(href='#') 2
                            li.page-item
                                a.page-link(href='#') 3
                            li.page-item
                                a.page-link(href='#' aria-label='Next')
                                    span(aria-hidden='true')
                                        i.fas.fa-chevron-right

